# Configuration file for Spatio-Temporal Graph Transformer

# Data settings
data:
  file_path: "data/RAM26_pmu_model_ready.parquet"  # Relative path
  top_n_sections: 15
  sequence_length: 14

# Model architecture
model:
  embedding_dim: 64
  num_attention_heads: 4
  num_layers: 2
  dropout: 0.2

# Training settings
training:
  epochs: 50
  batch_size: 512
  learning_rate: 0.0002
  weight_decay: 0.001
  k_folds: 5
  early_stopping_patience: 15
  gradient_clip: 1.0
  
  # Learning rate scheduler
  scheduler:
    type: "cosine"
    eta_min: 0.000001
    T_max: 50

# Loss function
loss:
  type: "focal"
  alpha: 0.3
  gamma: 2.0

# Data augmentation
augmentation:
  use_smote: true
  smote_k_neighbors: 5
  sequence_augmentation_factor: 2
  noise_std: 0.05

# Feature selection
feature_selection:
  enabled: true
  method: "random_forest"
  top_k: 15
  stability_threshold: 0.8
  n_bootstrap: 100

# Evaluation
evaluation:
  prioritize_recall: true
  use_optimal_threshold: true
  bootstrap_samples: 1000
  confidence_level: 0.95

# Spatial graph
spatial:
  adjacency_threshold_km: 50.0
  use_adjacency_constraints: true

# Output settings
output:
  results_dir: "final_graph_transformer_results"
  save_models: true
  save_metrics: true
  save_plots: true

# Reproducibility
seed: 42
use_gpu: true
mixed_precision: true